<h2>Sign In</h2>

<%= form_tag('/sessions') do %>
	<fieldset>
		<div class="field">
			<%= label_tag(:fname, 'First Name') %>
			<%= text_field_tag(:fname) %>
		</div>
		<div class="field">
			<%= label_tag(:lname, 'Last Name') %>
			<%= text_field_tag(:lname) %>
		</div>
		<div class="field">
			<%= label_tag(:email, 'Email') %>
			<%= text_field_tag(:email) %>
		</div>
		<div class="actions">
			<%= submit_tag('Submit') %>
		</div>
	</fieldset>
<% end %>	